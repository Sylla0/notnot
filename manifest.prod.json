{
  "manifest_version": 3,
  "name": "NotNot - Video Learning Assistant",
  "version": "1.0.0",
  "description": "Capture screenshots, take notes, and transcribe videos while learning",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://youtube.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": [
        "content-scripts/notnot-content-optimized.js"
      ],
      "css": ["assets/styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/styles/*.css",
        "assets/icons/*"
      ],
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "options_page": "options/options.html"
}